{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "timezone": "Europe/Warsaw",
  "extends": ["config:base"],
  "schedule": ["before 4am on Monday"],
  "rangeStrategy": "bump",
  "separateMinorPatch": true,
  "patch": {
    "groupName": "all patch updates"
  },
  "packageRules": [
    {
      "matchPackageNames": [
        "cimg/node",
        "node"
      ],
      "matchUpdateTypes": [
        "major", 
        "minor"
      ],
      "enabled": false
    }
  ]
}
