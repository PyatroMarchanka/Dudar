{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "timezone": "Europe/Warsaw",
  "extends": ["config:base"],
  "schedule": ["before 4pm"],
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "matchPackageNames": [
        "cimg/node",
        "node"
      ],
      "matchUpdateTypes": [
        "minor", 
        "patch"
      ],
      "enabled": true
    }
  ]
}
